# Default server configuration
#
server {
        listen 6969 default_server;
        listen [::]:6969 default_server;

        # SSL configuration
        #
        # listen 443 ssl default_server;
        # listen [::]:443 ssl default_server;
        #
        # Note: You should disable gzip for SSL traffic.
        # See: https://bugs.debian.org/773332
        #
        # Read up on ssl_ciphers to ensure a secure configuration.
        # See: https://bugs.debian.org/765782
        #
        # Self signed certs generated by the ssl-cert package
        # Don't use them in a production server!
        #
        # include snippets/snakeoil.conf;

        root /var/www/html;

        # Add index.php to the list if you are using PHP
        index index.html index.htm index.nginx-debian.html;

        server_name _;

        location /prometheus/ {
          proxy_pass http://127.0.0.1:9090;
        }

        location /metrics/ {
          proxy_pass http://127.0.0.1:9040;
        }

        # There will likely be an issue forwarding
        #   the eventsource through nginx
        location ~ /hystrix.stream {
          proxy_pass http://127.0.0.1:9040;
        }

        # There will likely be an issue forwarding
        #   the websockets through nginx
        location ~ /ws/kafka/predictions/ {
          proxy_pass http://127.0.0.1:5959;
        }

        location ~ /hystrix-dashboard/ {
          proxy_pass http://127.0.0.1:7979;
        }

        location ~ /api/v1/model/drop/ {
          proxy_pass http://127.0.0.1:9877;
        }

        location ~ /api/v1/model/predict/http/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location ~ /api/v1/model/predict/https/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location ~ /api/v1/model/predict/python/ {
          proxy_pass http://127.0.0.1:9876;
        }

        location ~ /api/v1/model/predict/scikit/ {
          proxy_pass http://127.0.0.1:9876;
        }

        location ~ /api/v1/model/predict/keras/ {
          proxy_pass http://127.0.0.1:9876;
        }

        location ~ /api/v1/model/predict/tensorflow/ {
          proxy_pass http://127.0.0.1:9876;
        }

        location ~ /api/v1/model/predict/spark/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location ~ /api/v1/model/predict/pmml/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location ~ /api/v1/model/predict/java/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location /api/v1/model/predict/xgboost/ {
          proxy_pass http://127.0.0.1:9040;
        }

        location /api/v1/model/predict/r/ {
          proxy_pass http://127.0.0.1:9040;
        }
}

