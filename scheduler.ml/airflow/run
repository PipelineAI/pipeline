#!/bin/bash

# Required by Tensorflow for HDFS
export CLASSPATH=$(${HADOOP_HDFS_HOME}/bin/hadoop classpath --glob)

/usr/local/bin/dockerd

# Start Airflow
mysql --host=mysql-master --port=3306 --user=root --password=password -e "CREATE DATABASE IF NOT EXISTS airflow"
sleep 3

airflow initdb
sleep 3

/root/github_webhook &

airflow flower &

airflow webserver &

airflow worker &

airflow scheduler 
