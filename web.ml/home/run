#!/bin/bash

if [ ! -f /var/www/html ]; then
  cd /var/www/ && ln -s /root/volumes/source.ml/web.ml/home/html
fi

if [ ! -f /etc/apache2/apache2.conf ]; then
  cd /etc/apache2/ && ln -s /root/volumes/source.ml/home/config/apache2.conf
fi

if [ ! -f /etc/apache2/sites-enabled/www.conf ]; then
  cd /etc/apache2/sites-enabled/ && ln -s /root/volumes/web.ml/home/config/www.conf
fi

if [ ! -f /root/run ]; then
  cd /root && ln -s /root/volumes/web.ml/home/run
fi

a2ensite www.conf

source /etc/apache2/envvars

service apache2 start

tail -f $APACHE_LOG_DIR/error.log 
